<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
    <% if current_user %>
      <div class="row">
        <h3>Review this product</h3>
        <%= form_for([@product, @review]) do |f| %>
          Description : <%= f.text_area :description %><br />
          Rating : <%= f.select(:rating, [5, 4, 3, 2, 1]) %><br />
          <%= f.submit %>
        <% end %>
      </div>
    <% end %>
    <% flash.each do |key, value| %>
      <%= content_tag :span, value, class: "flash #{:error}" %>
    <% end %>
    <div class="row">
      <% reviews = Review.where(:product_id => @product.id) %>
      <% reviews.reverse.each do |review| %>
        <h2><%= review.rating %>/5</h2>
        <h5><%= review.description %></h5>
        <% if current_user && review.user_id == current_user.id %>
          <%= button_to "Delete", product_review_path(@product, review), method: :delete %>
        <% end %>
      <% end %>
    </div>

  </article>

</section>
